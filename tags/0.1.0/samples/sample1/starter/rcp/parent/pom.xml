<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.jowidgets</groupId>
		<artifactId>org.jowidgets.cap.sample1.parent</artifactId>
		<version>0.0.1-SNAPSHOT</version>
		<relativePath>../../../parent/pom.xml</relativePath>
	</parent>
	<artifactId>org.jowidgets.cap.sample1.starter.rcp.parent</artifactId>
	<name>org.jowidgets.cap.sample1.starter.rcp.parent</name>
	<packaging>pom</packaging>
	
	<properties>
		<tycho.version>0.12.0</tycho.version>
	</properties>
	
	<repositories>
		<repository>
			<id>helios</id>
			<url>http://download.eclipse.org/releases/helios</url>
			<layout>p2</layout>
		</repository>
	</repositories>
	
	<modules>
		<module>../org.jowidgets.cap.sample1.starter.rcp.standalone</module>
		<module>../org.jowidgets.cap.sample1.starter.rcp.standalone.feature</module>
		<module>../org.jowidgets.cap.sample1.starter.rcp.standalone.application</module>
	</modules>

	<build>
		<plugins>
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-maven-plugin</artifactId>
				<version>${tycho.version}</version>
				<extensions>true</extensions>
			</plugin>
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>target-platform-configuration</artifactId>
				<version>${tycho.version}</version>
				<configuration>
					<resolver>p2</resolver>
					<pomDependencies>consider</pomDependencies>
					<environments>
						<environment>
							<os>win32</os>
							<ws>win32</ws>
							<arch>x86</arch>
						</environment>
					</environments>
				</configuration>
			</plugin>
		</plugins>
	</build>
	
</project>

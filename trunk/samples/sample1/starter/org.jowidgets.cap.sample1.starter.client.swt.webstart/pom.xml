<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>org.jowidgets</groupId>
		<artifactId>org.jowidgets.cap.sample1.parent</artifactId>
		<version>0.0.1-SNAPSHOT</version>
		<relativePath>../../parent/pom.xml</relativePath>
	</parent>
	<artifactId>org.jowidgets.cap.sample1.starter.client.swt.webstart</artifactId>
	<name>org.jowidgets.cap.sample1.starter.client.swt.webstart</name>

	<dependencies>
	    <dependency>
			<groupId>org.jowidgets</groupId>
			<artifactId>org.jowidgets.cap.sample1.starter.client.swt</artifactId>
			<version>${project.version}</version>
			<scope>runtime</scope>
		</dependency>
	</dependencies>
	
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<executions>
					<execution>
						<id>bundle-manifest</id>
						<phase>none</phase>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo.webstart</groupId>
				<artifactId>webstart-maven-plugin</artifactId>
				<version>1.0-beta-1</version>
				<executions>
					<execution>
						<goals>
							<goal>jnlp-inline</goal>
						</goals>
						<phase>package</phase>
					</execution>
				</executions>
				<configuration>
					<sign>
						<keystore>foobar</keystore>
						<keypass>foobar</keypass>
						<storepass>foobar</storepass>
						<alias>foobar</alias>
						<dnameCn>Harald Westphal</dnameCn>
						<dnameOu>Development</dnameOu>
						<dnameO>jowidgets.org</dnameO>
						<dnameL>Rotenburg</dnameL>
						<dnameSt>Lower Saxony</dnameSt>
						<dnameC>Germany</dnameC>
						<keystoreConfig>
							<delete>true</delete>
							<gen>true</gen>
						</keystoreConfig>
					</sign>
					<jnlp>
						<outputFile>sample.jnlp</outputFile>
						<mainClass>org.jowidgets.cap.sample1.starter.client.swt.Sample1StarterClientSwt</mainClass>
					</jnlp>
				</configuration>
			</plugin>
		</plugins>
	</build>
	
</project>
